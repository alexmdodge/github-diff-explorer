{
  "name": "github-diff-explorer",
  "version": "1.2.1",
  "description": "An extension which modifies the github diff viewer to instead use a file explorer similar to that of BitBucket and Stash.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:dev:watch",
    "test": "jest",
    "build:dev": "webpack --config webpack.dev.js",
    "build:dev:watch": "webpack --config webpack.dev.js --watch",
    "build:prod": "webpack --config webpack.prod.js",
    "release": "npm run build:prod && npm run pack:chrome && npm run pack:firefox",
    "pack:chrome": ".scripts/pack-release.sh chrome",
    "pack:firefox": ".scripts/pack-release.sh firefox",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version:patch": ".scripts/bump-version.sh PATCH",
    "version:minor": ".scripts/bump-version.sh MINOR",
    "version:major": ".scripts/bump-version.sh MAJOR"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alexmdodge/github-diff-explorer.git"
  },
  "keywords": [
    "github",
    "bitbucket",
    "diff-viewer",
    "explorer",
    "plugin",
    "extension"
  ],
  "author": "Alex Dodge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexmdodge/github-diff-explorer/issues"
  },
  "homepage": "https://github.com/alexmdodge/github-diff-explorer#readme",
  "config": {
    "name": {
      "script": "gde_script",
      "style": "gde_styles"
    },
    "paths": {
      "entry": "./src/script.ts",
      "output": "./extension/<BROWSER>/lib"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "26.0.10",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "css-loader": "3.6.0",
    "eslint": "7.7.0",
    "jest": "26.4.2",
    "jest-environment-jsdom": "26.3.0",
    "jest-environment-jsdom-global": "2.0.4",
    "mini-css-extract-plugin": "0.9.0",
    "style-loader": "1.2.1",
    "ts-jest": "26.2.0",
    "ts-loader": "8.0.2",
    "typescript": "4.0.2",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "4.2.2"
  }
}
